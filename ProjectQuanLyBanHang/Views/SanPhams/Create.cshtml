    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Thêm</h2>



@using (Html.BeginForm("Create", "SanPhams", FormMethod.Post, new { enctype = "multipart/form-data", id = "uploadForm" }))
